{% block js %}
<script src="{{ asset('js/bootstrap.min.js') }}"></script>

<script>
    $(function(){
        $('body').on('click', '#twitch', function(e) {
            e.preventDefault();
            var url = "{{ path('twitch') }}"; // On génère la route que l'on stocke dans une variable js

            $.ajax({
                type: 'post',
                url: url,
                dataType: 'html',
                timeout: 10000,
