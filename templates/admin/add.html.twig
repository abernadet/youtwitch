{% extends 'layout.html.twig' %}

{% block title %}Ajout d'un utilisateur - YouTwitch{% endblock %}
{% block titlepage %}Ajouter un utilisateur{% endblock %}

{% block content %}
    {{ form_start(form) }} {# Permet de créer la balise <form> #}

        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr' : {'class' : 'mb-3'}}) }} {# Permet de créer les champs #}

        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr' : {'class' : 'mb-3'}}) }} {# Permet de créer les champs #}

        {{ form_errors(form.plainPassword) }}
        {{ form_widget(form.plainPassword) }} {# Permet de créer les champs #}

        <label for="roles">Choisir un rôle</label>
        <select name="roles[]" multiple id="roles" class="form-control mb-3">
            <option value="" selected disabled>Choisir un rôle</option>
            <option value="ROLE_ADMIN">ROLE_ADMIN</option>
            <option value="ROLE_USER">ROLE_USER</option>
            <option value="ROLE_AUTEUR">ROLE_AUTEUR</option>
        </select>

        {{ form_label(form.image) }}
        {{ form_errors(form.image) }}
        {{ form_widget(form.image) }} {# Permet de créer les champs #}

        {{ form_widget(form.ajouter) }} {# Permet de créer les champs #}

    {{ form_end(form) }} {# Va fermer la balise </form> #}
{% endblock %}
