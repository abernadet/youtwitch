{% extends 'layout.html.twig' %}

{% block title %}Ajout d'un utilisateur - YouTwitch{% endblock %}

{% block content %}
<section class="d-flex justify-content-center">
    <div class="card col-8 bg-dark mt-5">
        <div class="card-body">

            <h3 class="card-title titleForm" style="text-align: center;font-weight: bold;">Ajouter un utilisateur</h3>
            <br>

            {{ form_start(form, {'attr' : {'class' : 'text-light'}}) }} {# Permet de créer la balise <form> #}

                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, {'attr' : {'class' : 'mb-3'}}) }} {# Permet de créer les champs #}

                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr' : {'class' : 'mb-3'}}) }} {# Permet de créer les champs #}

                {{ form_errors(form.plainPassword) }}
                {{ form_widget(form.plainPassword) }} {# Permet de créer les champs #}

                {{ form_label(form.birthdate) }}
                {{ form_errors(form.birthdate) }}
                {{ form_widget(form.birthdate, {'attr' : {'class' : 'mb-3'}}) }} {#permet de créer les champs#}

                <label for="roles">Choisir un rôle*</label>
                <select name="roles[]" multiple id="roles" class="form-control mb-3">
                    <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                    <option value="ROLE_USER">ROLE_USER</option>
                    <option value="ROLE_AUTEUR">ROLE_AUTEUR</option>
                </select>

                <label for="image">Changer l'avatar</label>
                {{ form_row(form.image, {'attr' : {'class' : 'mb-3', 'placeholder' : 'Choisir une image'}}) }} {#permet de créer les champs#}

                <span class="text-danger">* champ obligatoire</span>
                <div class="text-center">
                    {{ form_row(form.ajouter) }}
                    {# Va générer le label, les erreurs et le champ Content en une instruction #}
                </div>

            {{ form_end(form) }} {# Va fermer la balise </form> #}

        </div>
    </div>
</section>
{% endblock %}
