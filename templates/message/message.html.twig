{% extends 'layout.html.twig' %}
{% block title %}{{ message.sujet }} - YouTwitch{% endblock %}

{% block content %}

    <a href="{{ path('all-messages') }}" class="btn btn-orange">Retour</a>
    <div class="container">
        <h6>Expéditeur</h6>
            <p>{{ message.sender }}</p>

        <h6>Sujet</h6>
            <p>{{ message.sujet }}</p>

        <h6>Message</h6>
        <div class="card">
            <p class="card-body">{{ message.contenu }}<br><br><span class="font-italic font-weight-light">Envoyé le {{ message.dateenvoi | date('d-m-Y') }} à {{ message.dateenvoi | date('H:i:s') }}</span></p>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-outline-orange mt-3" id="repondre">Répondre</button>
        </div>
    </div>
    
{% endblock %}