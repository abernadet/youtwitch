{% extends 'layout.html.twig' %}
{% block title %}Nouveau Mot de passe {% endblock %}
{% block content %}
    {# pour afficher tous type de messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 30rem; margin: 50px; padding: 30px;">
            <div class="card-body" >
                <h5 class="card-title" style="text-align: center;font-weight: bold;">Nouveau mot de passe</h5>
                <br>
                <form action="{{ path('reset-password-ok') }}" method="post">
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input required type="password" id="password" name="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Confirmation mot de passe</label>
                        <input type="password" id="password2" name="password2" class="form-control">
                    </div>
                    <small>Votre mot de passe doit contenir au moins 6 caract√®res</small>
                    <input required type="hidden" name="idUser" value="{{ idUser }}">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Modifier</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}