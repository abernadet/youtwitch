{% extends 'logLayout.html.twig' %}

{% block title %}Modification de mot de passe - YouTwitch{% endblock %}

{% block content %}

<section class="d-flex justify-content-center">
    <div class="card" style="width: 30rem; margin: 50px; padding: 30px;">
        <div class="card-body" >

            {# pour afficher tous type de messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h3 class="card-title titleOrange" style="text-align: center;font-weight: bold;">Nouveau mot de passe</h3><br>

            <form action="{{ path('reset-password-ok') }}" method="post">
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input required type="password" id="password" name="password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password2">Confirmation mot de passe</label>
                    <input type="password" id="password2" name="password2" class="form-control">
                    <small>Votre mot de passe doit contenir au moins 6 caract√®res</small>
                </div>
                <input required type="hidden" name="idUser" value="{{ idUser }}">
                <button type="submit" class="btn btn-orange mt-2 btn-block">Modifier</button>
            </form>
        </div>
    </div>
</section>

{% endblock %}