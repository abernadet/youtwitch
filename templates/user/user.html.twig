{% extends 'layout.html.twig' %}
{% block title %}{{ user.username }} - YouTwitch{% endblock %}
{% block titlepage %}{{ user.username }}{% endblock %}
{% block content %}

    {# Pour afficher tous type de message #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} text-center col-6 m-auto">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container mt-5">
        <div class="row">
            <div class="col-6 col-md-4">
                <div class="sizeimg">
                    {% if user.image %}
                        <img class="img-thumbnail" src="{{ asset(image_directory ~ user.image)}}" alt="">
                    {% endif %}
                </div>
            </div>
            <div class="col-6 col-md-4">
                <p><strong>Pseudo</strong> : {{ user.username }}</p>
                <p><strong>Email</strong> : {{ user.email }}</p>
            </div>
            <div class="col-6 col-md-4">
                <a class="nav-link orange" href="{{ path('user-update',{id : user.id})}}">
                    <i class="fas fa-user-tie"></i> Modifier Mon profil
                </a>
            </div>
        </div>
    </div>

{% endblock %}