{% extends'layout.html.twig' %}
{% block title %}Modification du profil{% endblock %}

{% block content %}

    <section class="d-flex justify-content-center">
        <div class="card col-8 bg-dark mt-5">
            <div class="card-body">


                <h3 class="card-title titleForm" style="text-align: center;font-weight: bold;">Modification</h3>
                <br>

                {{ form_start(form, {'attr' : {'class' : 'text-light'}}) }}

                    {{ form_label(form.username) }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr' : {'class' : 'mb-3', 'placeholder' : 'Rentrez un Pseudo'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.email) }}
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr' : {'class' : 'mb-3', 'placeholder' : 'Rentrez un Pseudo'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.phone) }}
                    {{ form_errors(form.phone) }}
                    {{ form_widget(form.phone, {'attr' : {'class' : 'mb-3', 'placeholder' : '0000000000'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.address) }}
                    {{ form_errors(form.address) }}
                    {{ form_widget(form.address, {'attr' : {'class' : 'mb-3', 'placeholder' : '3, Avenue du bonheur'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.birthdate) }}
                    {{ form_errors(form.birthdate) }}
                    {{ form_widget(form.birthdate, {'attr' : {'class' : 'mb-3'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.image) }}
                    {{ form_errors(form.image) }}
                    {{ form_widget(form.image, {'attr' : {'class' : 'mb-3', 'placeholder' : 'Choisir une image'}}) }} {#permet de créer les champs#}

                    {{ form_label(form.twitchLogin) }}
                    {{ form_errors(form.twitchLogin) }}
                    {{ form_widget(form.twitchLogin, {'attr' : {'class' : 'mb-3', 'placeholder' : 'Rentrez un Pseudo'}}) }} {#permet de créer les champs#}

                    <div class="text-center">
                        {{ form_row(form.Modifier) }}
                        {# Va générer le label, les erreurs et le champ Content en une instruction #}
                    </div>

                {{ form_end(form) }}

            </div>
        </div>
    </section>

{% endblock %}